    <!-- ================================================================== -->
    <!--calendar view College staff-->

    <record id="view_college_staff_calendar" model="ir.ui.view">
       <field name="name">college.staff.calendar</field>
       <field name="model">college.staff</field>
       <field name="arch" type="xml">
       <calendar string="college staff"
                 date_start="joining_date"
                 mode="month"
                 event_open_popup="true"
                 color="branch_id">
<!--                 quick_add="True"-->

<!--                 date_stop="return_date"-->

           <field name="name"/>
           <field name="branch_id"/>
           <field name="position_id"/>
       </calendar>
   </field>
</record>

<!-- ================================================================== -->
<!--pivot view College staff-->

      <record id="view_college_staff_pivot" model="ir.ui.view">
           <field name="name">college.staff.pivot</field>
           <field name="model">college.staff</field>
           <field name="arch" type="xml">
                <pivot string="college staff">
                    <field name="name" type="row"/>
                    <field name="branch_id" type="col"/>
                </pivot>
           </field>
      </record>

    <!-- ================================================================== -->
<!--graph view College staff-->

      <record id="view_college_staff_graph" model="ir.ui.view">
           <field name="name">college.staff.graph</field>
           <field name="model">college.staff</field>
           <field name="arch" type="xml">
                <pivot string="college staff">
                    <field name="name"/>
                    <field name="gender"/>
                </pivot>
           </field>
      </record>

    <!-- ================================================================== -->
    <!--Action of College staff-->
    <record id ="action_college_staff" model="ir.actions.act_window">
        <field name="name">Staff</field>
        <field name="res_model">college.staff</field>
        <field name="view_mode">tree,form,kanban,calendar,pivot,graph</field>
    </record>


    <!-- ================================================================== -->
    <!-- Menu os Application -->
