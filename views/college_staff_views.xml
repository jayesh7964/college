<odoo>
    <!-- Form View of College staff -->
    <record id ="view_college_staff_form" model="ir.ui.view">
        <field name="name">view.college.staff.form</field>
        <field name="model">college.staff</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <field name="image" widget="image" class="oe_right oe_avatar" style="margin-top: 30px;"/>

                    <group>
                        <group>
                            <field name="name"/>
                            <field name="birthdate"/>
                            <field name="gender" widget="radio"/>
                            <field name="age"/>
                            <field name="position_id"/>
                            <field name="branch_id"/>
                            <field name="joining_date"/>
                        </group>
                        <group>
                            <field name="contact" attrs="{'invisible':[('email','!=',False)]}"/>
                            <field name="email"/>
                            <field name="adress"/>
                            <field name="state"/>
                            <field name="country"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- ================================================================== -->
    <!--Tree view College staff-->
    <record id ="view_college_staff_tree" model="ir.ui.view">
        <field name="name">view.college.staff.tree</field>
        <field name="model">college.staff</field>
        <field name="arch" type="xml">
        <tree>
            <field name="name"/>
            <field name="contact"/>
            <field name="position_id"/>
            <field name="branch_id"/>
        </tree>
        </field>
    </record>

   <!-- ================================================================== -->
    <!--search view College staff-->
    <record id="view_college_staff_search" model="ir.ui.view">
       <field name="name">college.staff.search</field>
       <field name="model">college.staff</field>
       <field name="arch" type="xml">
           <search string="college staff Analysis">
               <field name="name"/>
               <field name="gender"/>
               <field name="age"/>
               <field name="position_id"/>
               <field name="branch_id"/>
               <field name="contact"/>
               <field name="email"/>
               <field name="state"/>
               <field name="country"/>
               <group string="Group By staff">
                   <filter name="group_by_name" string="Employee" context="{'group_by': 'name'}"/>
                   <filter name="group_by_gender" string="Gender" context="{'group_by': 'gender'}"/>
                   <filter name="group_by_branch" string="Branch"
                           context="{'group_by': 'branch_id'}"/>
               </group>
               <filter string="Age under 30" name="age_under_30" domain="[('age', '&lt;=', 30)]"/>
               <filter string="Age above 30" name="age_above_30" domain="[('age', '&gt;', 30)]"/>


               <filter string="position_like" name="position1" domain="[('position_id', 'like', 'professor')]"/>
               <filter string="position_=like" name="position2" domain="[('position_id', '=like', '%professor')]"/>
               <filter string="position_ilike" name="position3" domain="[('position_id', 'ilike', 'professOr')]"/>
               <filter string="position_=ilike" name="position4" domain="[('position_id', '=ilike', '%professOr')]"/>
               <filter string="position_notlike" name="position5" domain="[('position_id', 'not like', 'professor')]"/>
               <filter string="position_notilike" name="position6" domain="[('position_id', 'not ilike', 'professor')]"/>
               <filter string="position_in" name="position7" domain="[('position_id', 'in', 'professor')]"/>
               <filter string="position_not_in" name="position7" domain="[('position_id', 'not in', 'professor')]"/>


               <searchpanel>
                   <field name="gender" string="Gender" icon="fa-user"/>    <!--fa-mars-->
                   <field name="branch_id" string="Branch" icon="fa-graduation-cap"/>
               </searchpanel>
           </search>
       </field>
</record>

